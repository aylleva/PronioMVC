                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active"
                         id="featured"
                         role="tabpanel"
                         aria-labelledby="featured-tab">
                       @await Component.InvokeAsync("Product",SortType.Name)
                    </div>
                    <div class="tab-pane fade"
                         id="bestseller"
                         role="tabpanel"
                         aria-labelledby="bestseller-tab">
                        @await Component.InvokeAsync("Product", SortType.Price)
                    </div>
