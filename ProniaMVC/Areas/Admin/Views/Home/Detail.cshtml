@model List<DetailOrderVM>
@{
	int count = 0;
}
<div class="row">
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Detail Table</h4>
				<div class="table-responsive">
					<table class="table table-striped">
						<thead>
							<tr>
								<th>
									NO
								</th>
								<th>
									Image
								</th>
								<th>
									Name
								</th>
								<th>
									Count
								</th>
								<th>
									Price
								</th>
							</tr>
						</thead>
						<tbody>
							@foreach(var item in Model){
								count++;
								<tr>
									<td>
										@count
									</td>
									<td>
										<img src="~/assets/images/website-images/@item.Image" />
									</td>
									<td>
										<p>@item.Name</p>
									</td>
									<td>
										<p>@item.Count</p>
									</td>
									<td>
										<p>$@item.Price</p>
									</td>
								</tr>
							}
							
							<tr>
								<td>Address:@Model.FirstOrDefault().Address</td>
							</tr>



						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>