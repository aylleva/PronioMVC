@model UpdateSlideVM
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update a Slide</h4>

                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <img style="width:130px;height:130px" src="~/assets/images/website-images/@Model.Image">
                        <input asp-for=Image class="form-control" type="hidden">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Photo</label>
                        <input asp-for=Photo class="form-control" placeholder="Photo" accept="image/png">
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Title</label>
                        <input asp-for=Title class="form-control" placeholder="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">SubTitle</label>
                        <input asp-for=SubTitle class="form-control" placeholder="SubTitle">
                        <span asp-validation-for="SubTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Order</label>
                        <input asp-for=Order class="form-control" placeholder="Order">
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Description</label>
                        <textarea asp-for=Description class="form-control" placeholder="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
