@model List<Slide>

@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slide Table</h4>
                <p class="card-description">
                    <a asp-action="create" class="btn btn-success">Create a Slide </a>
                </p>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    NO
                                </th>
                                <th>
                                   Slide Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Order
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Slide slide  in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/assets/images/website-images/@slide.Image"/>
                                    </td>
                                    <td>
                                        <p>@slide.Title</p>
                                    </td>
                                    <td>
                                        <p>@slide.Order</p>
                                    </td>
                                    <td>
                                        <a class="btn btn-warning" title="Update" asp-action="update" asp-route-id="@slide.Id"><i class="mdi mdi-spotlight-beam"></i></a>
                                        <a class="btn btn-danger" title="Delete" asp-action="delete" asp-route-id="@slide.Id"><i class="mdi mdi-delete-forever"></i></a>
                                        <a class="btn btn-primary" title="Detail"><i class="mdi mdi-eye"></i></a>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
